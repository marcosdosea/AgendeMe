@model IEnumerable<Core.DTO.CidadaoListDTO>

@{
    ViewData["Title"] = "Cidadãos";
}

<h1>Cidadãos</h1>

<p>
    <a asp-action="Create">Cadastrar novo cidadão</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoCidadao)
            </th>
            <th>
                Editar
            </th>
            <th>
                Remover
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoCidadao)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.Id})
            </td>
            <td>
                @Html.ActionLink("Remover", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
