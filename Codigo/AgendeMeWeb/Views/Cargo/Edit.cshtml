@model AgendeMeWeb.Models.CargoViewModel

@{
    ViewData["Title"] = "Editar cargo";
}

<div class="row container col-md-8 col-lg-6 my-6">
    <h1 class="mb-0">Editar cargo</h1>
    <h4 class="mt-2 mb-6">Sessão para edição de cargo</h4>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input asp-for="Id" class="form-control" type="hidden"/>
        <span asp-validation-for="Id" class="text-danger"></span>


        <div class="row mb-3 px-0">
            <div class="br-input">
                <label asp-for="Nome"></label>
                <input asp-for="Nome" type="text" placeholder="Nome do cargo" />
            </div>
        </div>

        <div class="row mb-6 px-0">
            <div class="br-textarea large">
                <label asp-for="Descricao"></label>
                <textarea asp-for="Descricao" placeholder="Descrição do que faz o cargo"></textarea>
            </div>
        </div>

        <div class="d-grid gap-2">
            <div class="br-magic-button small col-7 col-md-5 col-lg-6 col-xl-4 mx-auto justify-content-center">
                <button type="submit" class="br-button btn-block">Salvar Alterações</button>
            </div>
        </div>

    </form>

    <div class="d-grid gap-2 text-center mt-3 justify-content-center">
        <a class="br-button secondary small" asp-action="Index">
            Voltar para a lista
        </a>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
