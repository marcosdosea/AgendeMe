@model IEnumerable<Core.DTO.AgendaDoServicoDiasDTO>

<div class="mb-4 pb-4">
    <i class="azul-agende-me icone-botao-box mt-4 w-100 d-block mx-auto @ViewBag.iconeServicoPublico text-center"></i>
    <h2 class="text-center fw-bold azul-text">@ViewBag.nomeServicoPublico</h2>
</div>

<h1 class="mt-5 fw-bold fs-2">Escolha o local desejado</h1>
<h4 class="mb-5 fw-light fs-4">O serviço <span class="fw-bold">@ViewBag.nomeServicoPublico</span> está disponível nestes locais</h4>

<div class="d-flex flex-column mb-5 pb-5 align-items-stretch flex-c-gap">
    @if (Model.Any())
        @foreach (var item in Model)
        {
            <div class="br-card hover botao-box">
                <a class="br-card hover mb-0 back-none" onclick="getServicos('@Url.Action("ServicosPublicos")')">
                    <div class="card-content">
                        <p class="text-break text-wrap azul-text user-select-none fs-4 mt-4 mb-4 fw-bold text-center text-uppercase">@Html.DisplayFor(modelItem => item.DiaSemana)</p>
                        @{  
                            if(item.DiaSemana.Equals("Segunda"))
                            {
                                DateTime data = @DateTime.Now;
                                data = data.AddDays(1);
                                while (data.DayOfWeek.ToString() != "Monday")
                                {
                                    data = data.AddDays(1);
                                }
                                    <p>@data.ToString("dd/MM/yyyy")</p>
                            }
                            else if (item.DiaSemana.Equals("Terça"))
                            {
                                DateTime data = @DateTime.Now;
                                data = data.AddDays(1);
                                while (data.DayOfWeek.ToString() != "Tuesday")
                                {
                                    data = data.AddDays(1);
                                }
                                    <p>@data.DayOfWeek.ToString();</p>
                            }
                            else if (item.DiaSemana.Equals("Quarta"))
                            {
                                DateTime data = @DateTime.Now;
                                data = data.AddDays(1);
                                while (data.DayOfWeek.ToString() != "Wednesday")
                                {
                                    data = data.AddDays(1);
                                }
                                    <p>@data.DayOfWeek.ToString();</p>
                            }
                            else if (item.DiaSemana.Equals("Quinta"))
                            {
                                DateTime data = @DateTime.Now;
                                data = data.AddDays(1);
                                while (data.DayOfWeek.ToString() != "Thursday")
                                {
                                    data = data.AddDays(1);
                                }
                                <p>@data.DayOfWeek.ToString();</p>
                            }
                            else if (item.DiaSemana.Equals("Sexta"))
                            {
                                DateTime data = @DateTime.Now;
                                data = data.AddDays(1);
                                while (data.DayOfWeek.ToString() != "Friday")
                                {
                                    data = data.AddDays(1);
                                }
                                <p>@data.DayOfWeek.ToString();</p>
                            }
                        }
                    </div>

                </a>
            </div>

        }       else
    {
        <div class="br-message warning" role="alert">
            <div class="icon">
                <i class="fas fa-exclamation-triangle fa-lg" aria-hidden="true"></i>
            </div>
            <div class="content">
                <span class="message-title">Atenção.</span><span class="message-body">
                    Não há órgãos públicos disponíveis para esse serviço público. <br />
                    Por favor entre em contato com o gestor da prefeitura para mais informações.
                </span>
            </div>
            <div class="close">
                <button class="br-button circle small" type="button" aria-label="Fechar">
                    <i class="fas fa-times" aria-hidden="true"></i>
                </button>
            </div>
        </div>
    }
</div>