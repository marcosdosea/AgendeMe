@model IEnumerable<Core.DTO.ServicoPublicoDTO>

<div class="br-breadcrumb">
    <ul class="crumb-list">
        <li class="crumb home">
            <a class="br-button circle breadcrumb-home" asp-controller="AgendarServico" asp-action="Index">
                <span class="sr-only">Página inicial</span><i class="fas fa-home"></i>
            </a>
        </li>
        <li class="crumb" data-active="active">
            <i class="icon fas fa-chevron-right"></i>
            <a asp-controller="AgendarServico" asp-action="Index">
                <span class="ps-0">Agendar Serviço</span>
            </a>
        </li>
        <li class="crumb" data-active="active">
            <i class="icon fas fa-chevron-right"></i>
            <span onclick="voltarArea('@Url.Action("AreasDeServico")', 1)">
                Áreas de Serviço
            </span>
        </li>
        <li class="crumb" data-active="active">
            <i class="icon fas fa-chevron-right"></i><span>Serviços Públicos</span>
        </li>
    </ul>
</div>

<div class="mb-4 pb-4">
    <i class="azul-agende-me icone-botao-box mt-4 w-100 d-block mx-auto @ViewBag.iconeAreaDeServico text-center"></i>
    <h2 class="text-center fw-bold azul-text">@ViewBag.nomeAreaDeServico</h2>
</div>

<h1 class="mt-5 text-center fw-bold fs-2">Serviços Disponíveis</h1>
<h4 class="mb-5 text-center fw-light fs-4">Escolha o serviço desejado</h4>

<div class="d-flex flex-wrap mb-5 pb-5 d-flex-dinamic align-items-stretch flex-c-gap flex-r-gap">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="br-card hover box w-250">
                <a class="br-card hover mb-0 back-none" onclick="getOrgaos('@Url.Action("OrgaosPublicos")','@item.Nome', '@item.Icone')">
                <div class="card-content">
                    <i class="azul-agende-me icone-botao-box mt-4 w-100 d-block mx-auto @Html.DisplayFor(modelItem => item.Icone) text-center"></i>
                    <p class="text-break text-wrap azul-text user-select-none fs-4 mt-4 mb-4 fw-bold text-center text-uppercase">@Html.DisplayFor(modelItem => item.Nome)</p>
                </div>

            </a>
            </div>
        }

    }
    else
    {
        <div class="br-message warning" role="alert">
            <div class="icon">
                <i class="fas fa-exclamation-triangle fa-lg" aria-hidden="true"></i>
            </div>
            <div class="content">
                <span class="message-title">Atenção.</span><span class="message-body">
                    Não há serviços públicos disponíveis para essa área. <br />
                    Por favor entre em contato com o gestor da prefeitura para mais informações.
                </span>
            </div>
            <div class="close">
                <button class="br-button circle small" type="button" aria-label="Fechar">
                    <i class="fas fa-times" aria-hidden="true"></i>
                </button>
            </div>
        </div>
    }
</div>