@model IEnumerable<AgendeMeWeb.Models.AreaDeServicoViewModel>

<div class="br-breadcrumb">
    <ul class="crumb-list">
        <li class="crumb home">
            <a class="br-button circle" asp-controller="AgendarServico" asp-action="Index">
                <span class="sr-only">Página inicial</span>
                <i class="fas fa-home"></i>
            </a>
        </li>
        <li class="crumb" data-active="active">
            <i class="icon fas fa-chevron-right"></i><span>Áreas de Serviço</span>
        </li>
    </ul>
</div>


<h1 class="mt-5 text-center fw-bold fs-2">Áreas Disponíveis</h1>
<h4 class="mb-5 text-center fw-light fs-4">Encontre o serviço desejado através das áreas</h4>

<div class="d-flex flex-wrap justify-content-evenly mb-5 pb-5">
    @if (Model.Any())
        @foreach (var item in Model)
        {
            <div class="row col-md ml-4 mr-4 botao-box">
                <a class="back-none" asp-controller="AgendarServico" asp-action="Edit" asp-route-id="@item.Id" target="_blank">
                    <div class="br-card hover mb-0">
                        <div class="card-content">
                            <i class="azul-agende-me icone-botao-box mt-4 w-100 d-block mx-auto @Html.DisplayFor(modelItem => item.Icone) text-center"></i>
                            <p class="azul-text user-select-none fs-4 mt-4 mb-4 fw-bold text-center text-uppercase">@Html.DisplayFor(modelItem => item.Nome)</p>
                        </div>
                    </div>
                </a>
            </div>
        }else
        {
            <div class="br-message warning" role="alert">
                <div class="icon">
                    <i class="fas fa-exclamation-triangle fa-lg" aria-hidden="true"></i>
                </div>
                <div class="content">
                    <span class="message-title">Atenção.</span><span class="message-body">
                        Não há áreas de serviço disponíveis para essa prefeitura. <br />
                        Por favor entre em contato com o gestor da prefeitura para mais informações.
                    </span>
                </div>
                <div class="close">
                    <button class="br-button circle small" type="button" aria-label="Fechar">
                        <i class="fas fa-times" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        }
</div>