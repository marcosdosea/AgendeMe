<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Agende-Me | @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/AgendeMeWeb.styles.css" asp-append-version="true" />
    
    <!-- Design System GOV.BR -->
    <link rel="stylesheet"
          href="~/css/core.min.css" />
    <!-- Font Awesome utilizado pelo GOV.BR -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" />
    
    <link rel="stylesheet" href="~/css/agendeme.css" />
    <link rel="stylesheet" href="~/css/agendaDoServico.css" />
    <link rel="stylesheet" href="~/css/atendimento.css" />
    @await RenderSectionAsync("Css", required: false)
</head>
<body class="overflow-md-hidden">
    <header class="br-header bg-primary text-light">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <span class="m-0 fs-2 fw-bold">Painel de Atendimento</span>
            <div class="d-flex flex-column align-items-end fs-4 ms-2">
                <span id="time" class="fw-bold"></span>
                <span id="date" class="fw-bold"></span>
            </div>
        </div>
    </header>
    <main role="main">
        @RenderBody()
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/vanilla-masker.min.js"></script>
    <!-- Scripts de componentes GOV.BR -->
    <script src="~/js/core-init.js"></script>
    <script src="~/js/user.js"></script>
    <script src="~/js/atendimento.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>