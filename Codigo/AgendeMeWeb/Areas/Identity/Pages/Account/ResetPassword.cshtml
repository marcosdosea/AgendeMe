@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Redefinir Senha";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" />

            <label asp-for="Input.Email" class="form-label"></label>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            <div class="form-group d-flex flex-column">
                <div class="d-flex justify-content-between">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="input-group align-items-center overflow-hidden bg-light border-bottom border-dark float-end">
                    <input asp-for="Input.Password" type="password" id="InputSenha" class="form-control fs-5  ps-1 border-0" autocomplete="new-password" aria-required="true" />
                    
                    <i class="fas fa-eye mx-2 pointer-cursor" tooltip" title="Mostrar senha" id="toggleSenha"></i>

                </div>
            </div>


            
            
            

            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

            <button type="submit" class="mt-2 br-button primary w-100 mr-3">Redefinir</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
