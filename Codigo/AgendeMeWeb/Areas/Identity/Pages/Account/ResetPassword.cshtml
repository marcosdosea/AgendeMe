@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Redefinir Senha";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Input.Code" type="hidden" />

            <label asp-for="Input.Email" class="form-label"></label>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>

            <div class="form-group mb-3 br-input input-button wi-200">
                <label for="input-password" asp-for="Input.Password" class="control-label"></label>
                <input id="input-password" asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Digite sua Senha" />
                <button class="br-button" type="button" aria-label="Mostrar senha">
                    <i class="fas fa-eye" aria-hidden="true"></i>
                </button>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 br-input input-button wi-200">
                <label for="input-cpassword" asp-for="Input.ConfirmPassword" class="control-label"></label>
                <input id="input-cpassword" asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirme sua Senha" />
                <button class="br-button" type="button" aria-label="Mostrar senha">
                    <i class="fas fa-eye" aria-hidden="true"></i>
                </button>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            

            <button type="submit" class="mt-2 br-button primary w-100 mr-3">Redefinir</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
