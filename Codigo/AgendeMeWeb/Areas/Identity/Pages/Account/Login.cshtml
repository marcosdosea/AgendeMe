@page
@model LoginModel

@{
    ViewData["Title"] = "Acessar sua conta";
}

<div class="d-flex justify-content-center">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h3>Acesso ao Agende-Me</h3>
                <div class="br-input mt-5">
                    <label asp-for="Input.CPFOrEmail" class="form-label"></label>
                    <input asp-for="Input.CPFOrEmail" class="form-control" autocomplete="username" aria-required="true" placeholder="Digite o CPF ou E-mail" />
                    <span asp-validation-for="Input.CPFOrEmail" class="text-danger"></span>
                </div>
                <div class="form-group mb-3 br-input input-button">
                    <label for="input-password" asp-for="Input.Password" class="control-label"></label>
                    <input id="input-password" asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Digite sua Senha" />
                    <button class="br-button" type="button" aria-label="Mostrar senha">
                        <i class="fas fa-eye" aria-hidden="true"></i>
                    </button>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div id="loginErrors" asp-validation-summary="ModelOnly" class="text-danger mt-4"></div>
                <div class="mt-4 d-flex justify-content-end">
                    <button id="login-submit" type="submit" class="br-button primary mr-3">Entrar</button>
                </div>

                <div class="mt-6 d-flex justify-content-center">
                    <a class="br-button secondary mr-3" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Criar nova conta</a>
                </div>
                <hr />
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a senha?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
